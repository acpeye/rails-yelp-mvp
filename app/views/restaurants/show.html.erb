<div class="container">
  <h3><%= @restaurant.name %></h3>
  <div class="row">
    <div class="col-md-4">
      <p> Address: <%= @restaurant.address %></p>
      <p> Tel: <%= @restaurant.phone_number %></p>
      <p> Style: <%= @restaurant.category.capitalize %></p>
    </div>
  </div>
  <%= link_to restaurants_path do%>
    <p class="btn btn-primary">Home</p>
  <% end %>
  <%= link_to new_restaurant_review_path(@restaurant) do%>
    <p class="btn btn-primary">Add Review</p>
  <% end %>
  <div class="row" style="margin-top: 50px">
    <div class="col-md-4">
      <p> Reviews</p>
      <% Review.where(restaurant_id: params[:id].to_s).each do |review| %>
        <p><%= review.content %></p>
        <p>Rating: <%= review.rating %></p>
      <% end %>
    </div>
  </div>
</div>
